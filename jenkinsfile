pipeline {
  agent any
  stages {
    stage('clean') {
      steps {
        bat 'gradlew clean'
      }
    }

    stage('build') {
      steps {
        bat 'gradlew build -x test '
      }
    }

    stage('test') {
      steps {
        bat 'gradlew test serenity:aggregate'
        publishHTML target: [
            allowMissing: false,
            alwaysLinkToLastBuild: false,
            keepAll: true,
            reportName : 'Serenity Report',
            reportDir:   'target/site/serenity',
            reportFiles: 'index.html'
      }
    }
  }
}
