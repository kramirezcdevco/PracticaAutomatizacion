pipeline {
  agent any
  stages {
    stage('clean') {
      steps {
        bat 'gradlew clean'
      }
    }

    stage('build') {
      steps {
        bat 'gradlew build -x test '
      }
    }

    stage('test') {
          steps {
            bat 'gradlew test aggregate'

            publishHTML(target: [
            reportName : 'Serenity',
            reportDir:   'target/site/serenity',
            reportFiles: 'index.html',
            keepAll:     true,
            alwaysLinkToLastBuild: true,
            allowMissing: false
            ])
          }
    }
  }
}
